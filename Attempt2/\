$balanced:                        #33cd5f !default;
$energized:                       #ffc900 !default;
$assertive:                       #ef473a !default;
$royal:                           #886aea !default;

/*dark is class added to ion-content, since ion-conte*/
/*is made up of multiple pieces and is a pain to style each*/
.dark {
  background-color: #284FAC;
  color: #ffffff;
}

/*Set the background to transparent for ion-item*/
.dark .item {
  border: none;
  border-top: 1px solid;
  border-bottom: 2px solid;
  border-color: #FFFFFF;
  color: #F0F1F1;
}

/*Changes the border for the last item*/
.dark .item:last-child {
  border-bottom: 1px solid #ffffff;
}

/*Just makes the type white*/
.dark h2,
.dark h3,
.dark p,
.dark a {
  color: #F0F1F1;
}

.item.item-divider{
        color: #000000;
}

